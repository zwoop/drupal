    "type": "drupal-module",
    "homepage": "https://www.drupal.org/project/search_api_solr",
    "license": "GPL-2.0+",
    "authors": [
        {
            "name": "Markus Kalkbrenner",
            "homepage": "https://www.drupal.org/u/mkalkbrenner"
